{% extends 'AdminCoreBundle::layout.html.twig' %}


{% block content_title %}
    {{ 'Configuration Zone'|trans }}
{% endblock content_title %}


{% block breadcrumb %}
    {% include "@AdminCore/Common/breadcrumb.html.twig" with {
        breadcrumb: {
            'Plugins': {
                    'url': url('admin_plugin_list')
                },
                ('Google analytics'): {
                    'active': true
                }
            }
        }
    %}
{% endblock breadcrumb %}


{% block content %}
    <form class="form" method="POST">
        <fieldset>
            <div class="col-1-3">
                <h2 class="fw-n">Google Analytics Setup</h2>
                <a target="_blank" href="https://www.google.com/analytics/web/">Go to google analytics</a>
            </div>
            <div class="col-2-3">
                <div class="box">
                    <ol>
                        <li>
                            <label for="analytics_tracker_id">{{ 'Google analytics tracking ID'|trans }}</label>

                            <input id="analytics_tracker_id" type="text" name="analytics_tracker_id" value="{{ plugin.configuration['analytics_tracker_id'] }}" placeholder="UA-XXXXXXXX-X" />
                        </li>
                    </ol>
                </div>
            </div>
            <div class="col-1-3">
                &nbsp;
            </div>
            <div class="col-2-3">
                <button type="submit" class="button-primary">{{ 'Save'|trans }}</button>
            </div>
        </fieldset>
    </form>
{% endblock content %}
